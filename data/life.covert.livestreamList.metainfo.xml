<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>life.covert.livestreamList</id>
  <name>Livestream List</name>
  <summary>Monitor your favorite livestreams</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0</project_license>

  <description>
    <p>
      Livestream List is a GTK4/Libadwaita application for monitoring livestreams on Twitch.
      Get notified when your favorite streamers go live and launch streams directly in your preferred video player.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Monitor Twitch channels for live status</li>
      <li>Desktop notifications when streams go live</li>
      <li>Streamlink integration for launching streams in mpv/VLC</li>
      <li>Import your followed channels from Twitch</li>
      <li>Filter and sort your channel list</li>
      <li>Multiple compact UI styles</li>
    </ul>
  </description>

  <launchable type="desktop-id">life.covert.livestreamList.desktop</launchable>

  <url type="homepage">https://github.com/mkeguy106/livestream-list-linux</url>
